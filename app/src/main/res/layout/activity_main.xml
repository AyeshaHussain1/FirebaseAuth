<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <ProgressBar
        android:id="@+id/PB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#FF84BFED"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_marginTop="556dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/IV"
        android:background="@drawable/firebaseauth"
      />

    <EditText
        android:id="@+id/EmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IV"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_layout"
        android:hint="Enter Email Here"
        android:inputType="textEmailAddress"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHighlight="@color/gray"
        android:textColorHint="#FFFF9800"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/PwdET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EmailET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_layout"
        android:hint="Enter Password Here"
        android:inputType="textEmailAddress"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHighlight="@color/gray"
        android:textColorHint="#FFFF9800"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_below="@id/TV1"
        android:layout_centerInParent="true"
        android:background="@drawable/google"
        android:padding="100dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/btn2"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Signup"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_login"
        android:text="Login"
        android:textColor="#FFFF9800"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/Signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/PwdET"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_login"
        android:text="Signup"
        android:textColor="#FFFF9800"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/TV1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/login"
        android:text="@string/or_using"
        android:textSize="20sp"
        android:textColor="@color/Text"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/TV1"
        android:layout_centerInParent="true"
        android:background="@drawable/facebook"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/IV2"
        android:layout_below="@id/btn2"
        android:background="@drawable/end"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>